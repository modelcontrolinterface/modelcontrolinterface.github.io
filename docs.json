{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Model Control Interface",
  "colors": {
    "primary": "#a995c9",
    "light": "#8a79ab",
    "dark": "#a995c9"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "documentation/index",
              "documentation/quickstart",
              "documentation/development"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "/"
  },
  "navbar": {
    "links": []
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/modelcontrolinterface"
    }
  },
  "description": "MCI (Model Control Interface) is an open-source network of software that enables fast, reliable, secure, and efficient integration between LLM applications and external services.",
  "seo": {
    "indexing": "navigable"
  },
  "metadata": {
    "timestamp": true
  },
  "interaction": {
    "drilldown": true
  },
  "api": {
    "playground": {
      "display": "interactive"
    }
  },
  "background": {
    "decoration": "grid",
    "color": {
      "light": "#f8f7fa",
      "dark": "#1a1823"
    }
  },
  "appearance": {
    "default": "system"
  },
  "styling": {
    "latex": true,
    "eyebrows": "breadcrumbs"
  },
  "icons": {
    "library": "lucide"
  }
}
