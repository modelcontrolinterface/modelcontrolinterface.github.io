---
import "@styles/global.css";
import { ClientRouter } from "astro:transitions";
import { SITE } from "../config";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(SITE.image || "/nano.png", Astro.site);
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="generator" content={Astro.generator} />

  <title>{SITE.TITLE}</title>
  <meta name="title" content={SITE.TITLE} />
  <meta name="description" content={SITE.DESCRIPTION} />

  <link rel="canonical" href={canonicalURL} />
  <link rel="icon" type="image/svg+xml" href={import.meta.env.BASE_URL + "favicon.svg"} />

  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={SITE.TITLE} />
  <meta property="og:description" content={SITE.DESCRIPTION} />
  <meta property="og:image" content={imageURL} />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={SITE.TITLE} />
  <meta name="twitter:description" content={SITE.DESCRIPTION} />
  <meta name="twitter:image" content={imageURL} />
  <meta name="twitter:url" content={canonicalURL} />

  <link
    rel="alternate"
    type="application/rss+xml"
    title={SITE.NAME}
    href={new URL("rss.xml", Astro.site)}
  />

  <ClientRouter />
</head>

<script is:inline>
  document.addEventListener("astro:before-swap", (e) => {
    const links = [
      ...e.newDocument.head.querySelectorAll('link[as="font"]'),
    ];
    links.forEach((link) => link.remove());
  });

  function initScripts() {
    const root = document.documentElement;
    const scrollBtn = document.getElementById("back-to-top");

    if (scrollBtn) {
      scrollBtn.addEventListener("click", () => {
        window.scrollTo({ top: 0, behavior: "smooth" });
      });

      window.addEventListener("scroll", () => {
        scrollBtn.classList.toggle(
          "translate-y-[200%]",
          window.scrollY < 100
        );
      });
    }

    const buttons = document.querySelectorAll("[data-theme]");
    const systemQuery = window.matchMedia("(prefers-color-scheme: dark)");

    const applyTheme = (theme) => {
      if (theme === "system") {
        root.classList.toggle("dark", systemQuery.matches);
      } else {
        root.classList.toggle("dark", theme === "dark");
      }

      buttons.forEach((btn) => {
        const isActive = btn.dataset.theme === theme;
        btn.setAttribute("aria-pressed", isActive);
        btn.classList.toggle("theme-active", isActive);
      });
    };

    const setTheme = (theme) => {
      localStorage.setItem("theme", theme);
      applyTheme(theme);
    };

    const savedTheme = localStorage.getItem("theme") ?? "system";
    applyTheme(savedTheme);

    systemQuery.addEventListener("change", () => {
      if (localStorage.getItem("theme") === "system") {
        applyTheme("system");
      }
    });

    buttons.forEach((btn) => {
      btn.addEventListener("click", () => {
        setTheme(btn.dataset.theme);
      });
    });
  }

  document.addEventListener("DOMContentLoaded", initScripts);
  document.addEventListener("astro:after-swap", initScripts);
</script>
