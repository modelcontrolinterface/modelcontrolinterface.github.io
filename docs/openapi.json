{
  "openapi": "3.1.0",
  "info": {
    "title": "Model Control Interface",
    "description": "Control and monitor executable units with linting and persistence options.",
    "version": "1.0.0",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/license/mit"
    }
  },
  "servers": [
    {
      "url": "http://petstore.swagger.io/v2",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "process",
      "description": "Management of executable units"
    },
    {
      "name": "definition",
      "description": "Management of API definitions"
    },
    {
      "name": "module",
      "description": "Management of WASM modules"
    }
  ],
  "components": {
    "securitySchemes": {
      "mci_auth": {
        "type": "oauth2",
        "flows": {
          "implicit": {
            "authorizationUrl": "http://petstore.swagger.io/oauth/dialog",
            "scopes": {
              "write:processes": "modify processes",
              "read:processes": "read processes",
              "write:definitions": "modify definitions",
              "read:definitions": "read definitions",
              "write:modules": "modify modules",
              "read:modules": "read modules"
            }
          }
        }
      }
    },
    "schemas": {
      "Process": {
        "type": "object",
        "required": ["code"],
        "properties": {
          "pid": {
            "type": "integer",
            "format": "int64",
            "examples": [101]
          },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "status": {
            "type": "string",
            "readOnly": true,
            "enum": ["idle", "running", "queued"],
            "description": "The current live state of the process."
          },
          "exit_state": {
            "type": "string",
            "enum": ["success", "failed", "terminated"],
            "readOnly": true,
            "description": "The result of the last execution. Null if the process has never run or is currently running."
          },
          "code": { "type": "string" },
          "environment": { "type": "string" },
          "extras": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "save": { "type": "boolean", "writeOnly": true, "default": false },
          "lint": { "type": "boolean", "writeOnly": true, "default": false },
          "run": { "type": "boolean", "writeOnly": true, "default": true }
        }
      },
      "Definition": {
        "type": "object",
        "required": ["id", "name", "type", "specification_file"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_]+$",
            "description": "Unique slug for the definition.",
            "examples": ["model-control-v1_stable"]
          },
          "name": {
            "type": "string",
            "description": "A human-readable name for the definition.",
            "examples": ["Data Processor v2"]
          },
          "description": {
            "type": "string",
            "description": "A detailed explanation of what this definition handles.",
            "examples": ["Standard ETL definition for processing CSV uploads."]
          },
          "type": {
            "type": "string",
            "description": "The format or category of the definition.",
            "examples": ["openapi"]
          },
          "specification_file": {
            "type": "string",
            "format": "binary",
            "description": "The actual file content of the specification file."
          }
        }
      },
      "DefinitionCreate": {
        "type": "object",
        "required": ["id", "name", "type", "specification_file"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_]+$",
            "description": "Unique slug for the definition.",
            "examples": ["model-control-v1_stable"]
          },
          "name": {
            "type": "string",
            "description": "A human-readable name for the definition.",
            "examples": ["Data Processor v2"]
          },
          "description": {
            "type": "string",
            "description": "A detailed explanation of what this definition handles.",
            "examples": ["Standard ETL definition for processing CSV uploads."]
          },
          "type": {
            "type": "string",
            "description": "The format or category of the definition.",
            "examples": ["openapi"]
          },
          "specification_file": {
            "type": "string",
            "format": "binary",
            "writeOnly": true,
            "description": "The actual file content of the specification file."
          }
        }
      },
      "DefinitionUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "A human-readable name for the definition.",
            "examples": ["Data Processor v2"]
          },
          "description": {
            "type": "string",
            "description": "A detailed explanation of what this definition handles.",
            "examples": ["Standard ETL definition for processing CSV uploads."]
          },
          "type": {
            "type": "string",
            "description": "The format or category of the definition.",
            "examples": ["openapi"]
          },
          "specification_file": {
            "type": "string",
            "format": "binary",
            "writeOnly": true,
            "description": "The actual file content of the specification file."
          }
        }
      },
      "InstallRequest": {
        "type": "object",
        "required": ["registry_url", "package_id"],
        "properties": {
          "registry_url": {
            "type": "string",
            "format": "uri",
            "description": "The URL of the registry to fetch the package from.",
            "examples": ["https://registry.example.com"]
          },
          "package_id": {
            "type": "string",
            "description": "The unique identifier of the package in the registry.",
            "examples": ["model-control-v1_stable"]
          }
        }
      },
      "Module": {
        "type": "object",
        "required": ["id", "name", "type", "wasm_file"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_]+$",
            "description": "Unique slug for the module.",
            "examples": ["docker_sandbox"]
          },
          "name": {
            "type": "string",
            "description": "A human-readable name for the module.",
            "examples": ["Docker Sandbox"]
          },
          "description": {
            "type": "string",
            "description": "A detailed explanation of what this module handles.",
            "examples": ["Docker based sandbox environment"]
          },
          "type": {
            "type": "string",
            "enum": ["sandbox", "language", "proxy", "interceptor", "hook"],
            "description": "The format or category of the module.",
            "examples": ["sandbox"]
          },
          "wasm_file": {
            "type": "string",
            "format": "binary",
            "description": "The actual file content of the wasm file."
          }
        }
      },
      "ModuleCreate": {
        "type": "object",
        "required": ["id", "name", "type", "wasm_file"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9-_]+$",
            "description": "Unique slug for the module.",
            "examples": ["docker_sandbox"]
          },
          "name": {
            "type": "string",
            "description": "A human-readable name for the module.",
            "examples": ["Docker Sandbox"]
          },
          "description": {
            "type": "string",
            "description": "A detailed explanation of what this module handles.",
            "examples": ["Docker based sandbox environment"]
          },
          "type": {
            "type": "string",
            "enum": ["sandbox", "language", "proxy", "interceptor", "hook"],
            "description": "The format or category of the module.",
            "examples": ["sandbox"]
          },
          "wasm_file": {
            "type": "string",
            "format": "binary",
            "writeOnly": true,
            "description": "The actual file content of the wasm file."
          }
        }
      },
      "ModuleUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "A human-readable name for the module.",
            "examples": ["Docker Sandbox"]
          },
          "description": {
            "type": "string",
            "description": "A detailed explanation of what this module handles.",
            "examples": ["Docker based sandbox environment"]
          },
          "type": {
            "type": "string",
            "enum": ["sandbox", "language", "proxy", "interceptor", "hook"],
            "description": "The format or category of the module.",
            "examples": ["sandbox"]
          },
          "wasm_file": {
            "type": "string",
            "format": "binary",
            "writeOnly": true,
            "description": "The actual file content of the wasm file."
          }
        }
      },
      "LogResponse": {
        "type": "object",
        "readOnly": true,
        "properties": {
          "stdout": { "type": "string" },
          "stderr": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      },
      "Error": {
        "type": "object",
        "readOnly": true,
        "properties": {
          "error": { "type": "string", "examples": ["Conflict"] },
          "message": {
            "type": "string",
            "examples": [
              "Cannot delete a process while it is in the 'running' state."
            ]
          },
          "details": { "type": "object" }
        }
      }
    }
  },
  "paths": {
    "/processes": {
      "get": {
        "tags": ["process"],
        "summary": "List all processes",
        "responses": {
          "200": {
            "description": "A list of processes.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Process" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["process"],
        "summary": "Create/Run a process",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Process" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Process created/initiated.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Process" }
              }
            }
          },
          "422": {
            "description": "Linting failure.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/processes/{pid}/output": {
      "get": {
        "tags": ["process"],
        "summary": "Get process output",
        "description": "Retrieve the output of a process (not execution logs). This endpoint may support streaming in future versions.",
        "parameters": [
          {
            "name": "pid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "description": "The process ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Process output as plain text.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Process not found.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/definitions": {
      "get": {
        "tags": ["definition"],
        "summary": "List all definitions",
        "responses": {
          "200": {
            "description": "A list of definitions.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Definition" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["definition"],
        "summary": "Create a new definition",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": { "$ref": "#/components/schemas/DefinitionCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Definition created successfully.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Definition" }
              }
            }
          },
          "400": {
            "description": "Invalid request.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "409": {
            "description": "Definition with this ID already exists.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/definitions/{id}": {
      "get": {
        "tags": ["definition"],
        "summary": "Get definition metadata and specification file",
        "description": "Retrieves the complete definition including metadata and the specification file content.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The definition ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Definition data including metadata and specification file.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Definition" }
              }
            }
          },
          "404": {
            "description": "Definition not found.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["definition"],
        "summary": "Update an existing definition",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The definition ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": { "$ref": "#/components/schemas/DefinitionUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Definition updated successfully.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Definition" }
              }
            }
          },
          "400": {
            "description": "Invalid request.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "Definition not found.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["definition"],
        "summary": "Delete a definition",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The definition ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Definition deleted successfully."
          },
          "404": {
            "description": "Definition not found.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "409": {
            "description": "Cannot delete definition (e.g., in use by processes).",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/definitions/install": {
      "post": {
        "tags": ["definition"],
        "summary": "Install a definition from a registry",
        "description": "Automatically downloads, validates, and installs a definition from a specified registry.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/InstallRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Definition installed successfully.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Definition" }
              }
            }
          },
          "400": {
            "description": "Invalid request or validation failure.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "409": {
            "description": "Definition already exists.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "502": {
            "description": "Failed to fetch from registry.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/modules": {
      "get": {
        "tags": ["module"],
        "summary": "List all modules",
        "responses": {
          "200": {
            "description": "A list of modules.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Module" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["module"],
        "summary": "Create a new module",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": { "$ref": "#/components/schemas/ModuleCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Module created successfully.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Module" }
              }
            }
          },
          "400": {
            "description": "Invalid request.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "409": {
            "description": "Module with this ID already exists.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/modules/{id}": {
      "get": {
        "tags": ["module"],
        "summary": "Get module metadata and WASM file",
        "description": "Retrieves the complete module including metadata and the WASM file content.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The module ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Module data including metadata and WASM file.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Module" }
              }
            }
          },
          "404": {
            "description": "Module not found.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["module"],
        "summary": "Update an existing module",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The module ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": { "$ref": "#/components/schemas/ModuleUpdate" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Module updated successfully.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Module" }
              }
            }
          },
          "400": {
            "description": "Invalid request.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "404": {
            "description": "Module not found.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["module"],
        "summary": "Delete a module",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The module ID"
          }
        ],
        "responses": {
          "204": {
            "description": "Module deleted successfully."
          },
          "404": {
            "description": "Module not found.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "409": {
            "description": "Cannot delete module (e.g., in use by processes).",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    },
    "/modules/install": {
      "post": {
        "tags": ["module"],
        "summary": "Install a module from a registry",
        "description": "Automatically downloads, validates, and installs a module from a specified registry.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/InstallRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Module installed successfully.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Module" }
              }
            }
          },
          "400": {
            "description": "Invalid request or validation failure.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "409": {
            "description": "Module already exists.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          },
          "502": {
            "description": "Failed to fetch from registry.",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    }
  }
}
