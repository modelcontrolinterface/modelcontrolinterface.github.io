{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Model Control Interface",
  "colors": {
    "primary": "#a995c9",
    "light": "#8a79ab",
    "dark": "#a995c9"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "anchors": [
      {
        "anchor": "Documentation",
        "icon": "book-open",
        "products": [
          {
            "product": "Server",
            "icon": "server-cog",
            "description": "The central MCI proxy for AI - service interaction",
            "tabs": [
              {
                "tab": "Documentation",
                "groups": [
                  {
                    "group": "Overview",
                    "pages": [
                      "server/introduction",
                      "server/faq",
                      "server/comparison"
                    ]
                  },
                  {
                    "group": "About MCI",
                    "pages": [
                      "server/architecture",
                      "server/transport"
                    ]
                  }
                ]
              }
            ]
          },
          {
            "product": "Specification Registry",
            "icon": "file-cog",
            "description": "The registry of MCI service specifications",
            "tabs": [
              {
                "tab": "Documentation",
                "pages": [
                  "specification-registry/introduction"
                ]
              }
            ]
          },
          {
            "product": "Module Registry",
            "icon": "boxes",
            "description": "The registry of MCI modules",
            "tabs": [
              {
                "tab": "Specification",
                "pages": [
                  "module-registry/introduction"
                ]
              }
            ]
          },
          {
            "product": "Dev Tools",
            "icon": "wrench",
            "description": "Tools for dev, testing and publishing MCI components",
            "tabs": [
              {
                "tab": "Specification",
                "pages": [
                  "dev-tools/introduction"
                ]
              }
            ]
          }
        ]
      },
      {
        "anchor": "Blog",
        "icon": "newspaper",
        "pages": [
          "blog/welcome"
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "/"
  },
  "navbar": {
    "links": []
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/modelcontrolinterface"
    }
  },
  "description": "MCI (Model Control Interface) is an open-source network of software that enables fast, reliable, secure, and efficient integration between LLM applications and external services.",
  "seo": {
    "indexing": "all"
  },
  "metadata": {
    "timestamp": true
  },
  "interaction": {
    "drilldown": true
  },
  "api": {
    "playground": {
      "display": "interactive"
    }
  },
  "background": {
    "decoration": "grid",
    "color": {
      "light": "#f8f7fa",
      "dark": "#1a1823"
    }
  },
  "appearance": {
    "default": "system"
  },
  "styling": {
    "latex": true,
    "eyebrows": "breadcrumbs"
  },
  "icons": {
    "library": "lucide"
  }
